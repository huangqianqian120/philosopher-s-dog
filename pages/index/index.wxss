/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 80px 20rpx 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 400;
  color: #333;
  text-align: center;
  margin: 60rpx 0 40rpx;
}

.philosopher-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.philosopher-item {
  padding: 24rpx 30rpx;
  background: #ffffff;
  border: 1px solid #eaeaea;
  border-radius: 8rpx;
  text-align: left;
  font-size: 28rpx;
  font-weight: 300;
  color: #333;
  transition: all 0.3s ease;
}

.philosopher-item:active {
  background: #fafafa;
  transform: scale(0.98);
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 50px 32rpx 10px;
  z-index: 100;
  background: #fff;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}
