.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 50px 32rpx 10px;
  z-index: 100;
  background: #fff;
  display: flex;
  align-items: center;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.chat-container {
  margin-top: 80px;
  flex: 1;
  display: flex;
  flex-direction: column;
  height: calc(100vh - 80px);
}

.chat-messages {
  flex: 1;
  padding: 0 20rpx;
  overflow-y: auto;
}

.message {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.message-content {
  font-size: 28rpx;
  line-height: 1.6;
  max-width: 70%;
  word-wrap: break-word;
  font-weight: 300;
}

.user {
  flex-direction: row-reverse;
}

.user .avatar {
  margin-right: 0;
  margin-left: 20rpx;
}

.input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-top: 1px solid #eaeaea;
}

.message-input {
  flex: 1;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  border: 1px solid #eaeaea;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #fafafa;
  height: 62rpx;
  line-height: 62rpx;
}

.input-placeholder {
  color: #999;
  font-size: 32rpx;
}

.send-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
}

.send-icon {
  width: 80rpx;
  height: 80rpx;
}

.send-button:active {
  opacity: 0.7;
}

.title {
  font-size: 32rpx;
  font-weight: 300;
  color: #333;
  margin-left: 20rpx;
} 